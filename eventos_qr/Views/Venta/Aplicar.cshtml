@using static eventos_qr.Entity.Enums.Configuracion
@model VentaViewModel
@{
    ViewData["Title"] = "Aplicar venta";
}

<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mb-3">
                <div>
                    <h1 class="h3 mb-0">Aplicar venta</h1>
                    <small class="text-muted">Revisa los datos y define el estado</small>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2"><i data-feather="arrow-left"></i><span>Volver</span></a>
            </div>

            @if (ViewBag.ErrorMessage != null)
            {
                <div class="alert modern alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @ViewBag.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-lg-8">
                    <div class="card mb-3">
                        <div class="card-header">Datos de la venta</div>
                        <div class="card-body">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Evento</dt>
                                <dd class="col-sm-8">@Model.NombreEvento</dd>
                                <dt class="col-sm-4">Cliente</dt>
                                <dd class="col-sm-8">@Model.NombrePersona</dd>
                                <dt class="col-sm-4">Fecha</dt>
                                <dd class="col-sm-8">@Model.Fecha.ToString("yyyy-MM-dd HH:mm")</dd>
                                <dt class="col-sm-4">Cantidad</dt>
                                <dd class="col-sm-8">@Model.Cantidad</dd>
                                <dt class="col-sm-4">Total</dt>
                                <dd class="col-sm-8">@Model.Total.ToString("N2")</dd>
                                <dt class="col-sm-4">Estado actual</dt>
                                <dd class="col-sm-8">
                                    @if (Model.EstadoVenta == (int)EstadoVenta.Pendiente)
                                    {
                                        <span class="badge bg-info text-dark">Pendiente</span>
                                    }
                                    else if (Model.EstadoVenta == (int)EstadoVenta.Aplicada)
                                    {
                                        <span class="badge bg-success">Aplicada</span>
                                    }
                                    else if (Model.EstadoVenta == (int)EstadoVenta.Rechazada)
                                    {
                                        <span class="badge bg-warning">Rechazada</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Otro</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="card mb-3">
                        <div class="card-header">Acciones</div>
                        <div class="card-body d-grid gap-2">
                            @if (Model.EstadoVenta != (int)EstadoVenta.Aplicada)
                            {
                                <form asp-action="Aplicar" method="post" class="d-grid gap-2">
                                    <input type="hidden" name="id" value="@Model.IdVenta" />
                                    <button name="accion" value="rechazar" class="btn btn-outline-warning d-flex align-items-center gap-2" type="submit">
                                        <i data-feather="x-circle"></i><span>Rechazar</span>
                                    </button>
                                    <button name="accion" value="aplicar" class="btn btn-success d-flex align-items-center gap-2" type="submit">
                                        <i data-feather="check-circle"></i><span>Aplicar y generar boletas</span>
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="fas fa-check-circle me-2"></i>
                                    Esta venta ya ha sido aplicada
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script> if (window.feather?.replace) feather.replace(); </script>
    @* Script para manejar notificaciones y descarga automática *@
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Verificar si hay un ZIP para descargar
            @if (TempData["ZipPath"] != null)
            {
                // Mostrar notificación de éxito con opción de descarga
                <text>
                    if(confirm('Las boletas han sido generadas correctamente. ¿Desea descargar el archivo ZIP con todas las boletas?')) {
                        window.location.href = '@Url.Action("DescargarZip", "Venta", new { zipPath = TempData["ZipPath"] })';
                    }
                </text>
            }

            // Verificar si hay URL de WhatsApp
            @if (TempData["WhatsappUrl"] != null)
            {
                // Mostrar botón para abrir WhatsApp
                <text>
                    setTimeout(function() {
                        if (confirm('¿Desea abrir WhatsApp para enviar las boletas al cliente?')) {
                            window.open('@TempData["WhatsappUrl"]', '_blank');
                        }
                    }, 1000);
                </text>
            }
        });
    </script>
}