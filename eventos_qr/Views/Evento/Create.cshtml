@model EventoViewModel
@{
    ViewData["Title"] = "Crear evento";
}
<div class="container-fluid p-0">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Crear evento</h5>
                    <a asp-action="Index" class="btn btn-secondary">Volver</a>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Fecha</label>
                            <input asp-for="Fecha" type="datetime-local" class="form-control" />
                            <span asp-validation-for="Fecha" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Capacidad</label>
                            <input asp-for="Capacidad" type="number" min="1" class="form-control" />
                            <span asp-validation-for="Capacidad" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Precio unitario</label>
                            <input asp-for="PrecioUnitario" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="PrecioUnitario" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Vendidas</label>
                            <input asp-for="Vendidas" type="number" min="0" class="form-control" />
                            <span asp-validation-for="Vendidas" class="text-danger"></span>
                        </div>

                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>

                        @* Concurrencia *@
                        <input type="hidden" asp-for="RowVersion" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script> if (window.feather?.replace) feather.replace(); </script>
}

